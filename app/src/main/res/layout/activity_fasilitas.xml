<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacilitiesActivity">

    <!-- Gambar Gelombang Biru di Atas -->
    <ImageView
        android:id="@+id/wave_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/vector3"
        android:scaleType="centerCrop"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Header Section (Centered and with proper font) -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasilitas"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="16dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/wave_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView to make the images scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <!-- The direct child of ScrollView must be a single layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Ruang Laboratorium Section -->
            <TextView
                android:id="@+id/laboratory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruang Laboratorium"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="16dp"/>

            <!-- Grid layout for images -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:rowCount="3">

                <!-- Reduced height for images -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lab1"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lab2"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lab3"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lab4"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lab5"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lab6"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Ruang Perpustakaan Section -->
            <TextView
                android:id="@+id/library_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruang Perpustakaan"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="16dp"/>

            <!-- Grid layout for images -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:rowCount="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/perpus"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/perpus2"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/perpus3"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/perpus4"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
